{
  "family": "miniquest-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::140352704388:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "miniquest-backend",
      "image": "140352704388.dkr.ecr.us-east-1.amazonaws.com/miniquest-backend:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:140352704388:secret:miniquest-prod-secrets-x3KyeU:OPENAI_API_KEY::"
        },
        {
          "name": "TAVILY_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:140352704388:secret:miniquest-prod-secrets-x3KyeU:TAVILY_API_KEY::"
        },
        {
          "name": "GOOGLE_MAPS_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:140352704388:secret:miniquest-prod-secrets-x3KyeU:GOOGLE_MAPS_KEY::"
        },
        {
          "name": "MONGODB_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:140352704388:secret:miniquest-prod-secrets-x3KyeU:MONGODB_URL::"
        },
        {
          "name": "JWT_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:140352704388:secret:miniquest-prod-secrets-x3KyeU:JWT_SECRET_KEY::"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/miniquest-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
